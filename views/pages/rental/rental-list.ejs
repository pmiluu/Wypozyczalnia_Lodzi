<%- include('../../fragments/header.ejs') %>
    <main>
        <h2>Rental list</h2>
        <div class="table-wrapper">
            <table class="table-list">
                <thead>
                    <tr>
                        <th>Client e-mail</th>
                        <th>Boat name</th>
                        <th>Date from</th>
                        <th>Date to</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let rental of rentals) { %>
                        <tr>
                            <td>
                                <%= rental.client.email %>
                            </td>
                            <td>
                                <%= rental.boat.name %>
                            </td>
                            <td>
                                <%= rental.dateFrom.toISOString().split('T')[0] %>

                            </td>
                            <td>
                                <%= rental.dateTo ? rental.dateTo.toISOString().split('T')[0] : '' %>
                            </td>
                            <td>
                                <ul class="list-actions">
                                    <li><a href="/rentals/details/<%=rental._id%>"
                                            class="list-actions-button-details">Details</a></li>
                                    <li><a href="/rentals/edit/<%=rental._id%>"
                                            class="list-actions-button-edit">Edit</a></li>
                                    <li><a href="/rentals/delete/<%=rental._id%>"
                                            class="list-actions-button-delete">Delete</a></li>
                                </ul>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
        <p><a href="/rentals/add" class="button-add">Add new rental</a></p>
    </main>
    <%- include('../../fragments/footer.ejs') %>