<%- include('../../fragments/header.ejs') %>
    <main>
        <h2>Boat list</h2>
        <div class="table-wrapper">
            <table class="table-list">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Seats</th>
                        <th>Year</th>
                        <th>Price</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let boat of boats) { %>
                        <tr>
                            <td>
                                <%= boat.name %>
                            </td>
                            <td>
                                <%= boat.seats %>
                            </td>
                            <td>
                                <%= boat.year %>
                            </td>
                            <td>
                                <%= boat.price %>
                            </td>
                            <td>
                                <ul class="list-actions">
                                    <li><a href="/boats/details/<%=boat._id%>"
                                            class="list-actions-button-details">Details</a></li>
                                    <li><a href="/boats/edit/<%=boat._id%>" class="list-actions-button-edit">Edit</a>
                                    </li>
                                    <li><a href="/boats/delete/<%=boat._id%>"
                                            class="list-actions-button-delete">Delete</a></li>
                                </ul>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
        <p><a href="boat-form.html" class="button-add">Add new boat</a></p>
    </main>
    <%- include('../../fragments/footer.ejs') %>